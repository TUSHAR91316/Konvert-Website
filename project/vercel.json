{
    "version": 2,
    "builds": [
        {
            "src": "*.html",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/(.*)",
            "dest": "/index.html"
        }
    ],
    "headers": [
        {
            "source": "/app-release.apk",
            "headers": [
                {
                    "key": "Content-Type",
                    "value": "application/vnd.android.package-archive"
                },
                {
                    "key": "Content-Disposition",
                    "value": "attachment; filename=app-release.apk"
                }
            ]
        }
    ]
}